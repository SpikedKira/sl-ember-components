{{#if subItems}}
    <a {{action "clickLink"}} class='dropdown-toggle' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>{{item.label}}</a>

    <ul class='dropdown-menu'>
        {{#each subItems as |item|}}
            {{sl-menu-item
                action="handleAction"
                item=item
            }}
        {{/each}}
    </ul>
{{else}}
    <a {{action "clickLink"}}>{{item.label}}</a>
{{/if}}
