<ul class="btn-group list-unstyled">
    {{#each items as |item|}}
        {{sl-menu-item
            action="handleAction"
            isTop=true
            item=item
        }}
    {{/each}}

    {{#if allowShowAll}}
        {{sl-menu-item-show-all
            onMouseEnter="showAll"
        }}
    {{/if}}
</ul>
