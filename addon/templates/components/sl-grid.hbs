<header>
    <div class="row">
        <div class="col-sm-6">
            {{yield}}
        </div>

        {{#if filterComponent}}
            <div class="col-sm-6 text-right">
                {{#sl-button
                    action="toggleFilterPane"
                    size="small"
                }}
                    {{filterButtonLabel}}
                {{/sl-button}}
            </div>
        {{/if}}
    </div>

    {{#if filterPaneOpen}}
    <div class="row">
        <div class="col-sm-12 filter-content">
            {{#if filterComponent}}
                {{component filterComponent}}
            {{/if}}
        </div>
    </div>
    {{/if}}
</header>

<div class="{{if loading "sl-loading"}}">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                {{#each columns as |column|}}
                    {{sl-grid-column-header column=column onClick="sortColumn"}}
                {{/each}}

                {{#if rowActions}}
                    <th class="actions-cell column-small"></th>
                {{/if}}
            </tr>
        </thead>
        <tbody>
            <!-- duplicate header for proper spacing w/ fixed table header -->
            <tr>
                {{#each columns as |column|}}
                    {{sl-grid-column-header column=column}}
                {{/each}}

                {{#if rowActions}}
                    <th class="actions-cell column-small"></th>
                {{/if}}
            </tr>
            {{#each content as |row|}}
                {{#sl-grid-row}}
                    {{#each columns as |column|}}
                        {{sl-grid-cell
                            column=column
                            onClick="rowClick"
                            row=row
                        }}
                    {{/each}}

                    {{#if rowActions}}
                        <td class="actions-cell column-small">
                            {{#sl-drop-button
                                align="right"
                                label=actionsButtonLabel
                                size="extra-small"
                                theme="hover"
                            }}
                                {{#each rowActions as |rowAction|}}
                                    {{sl-drop-option
                                        action="dropButtonSelect"
                                        actionContext=rowAction.action
                                        data=row
                                        label=rowAction.label
                                    }}
                                {{/each}}
                            {{/sl-drop-button}}
                        </td>
                    {{/if}}
                {{/sl-grid-row}}
            {{/each}}
        </tbody>
    </table>
</div>

<div class="panel">
    <header class="panel-heading">
        <button {{action "closeDetailPane"}} type="button" class="close" aria-label="Close">&times;</button>

        <span class="title">
            {{#if detailHeaderComponent}}
                {{component detailHeaderComponent model=activeRecord}}
            {{/if}}
        </span>
    </header>

    <div class="panel-body">
        {{#if detailComponent}}
            {{component detailComponent model=activeRecord}}
        {{/if}}
    </div>

    <footer class="panel-footer">
        {{#if detailFooterComponent}}
            {{component detailFooterComponent model=activeRecord}}
        {{/if}}
    </footer>
</div>

{{#if displayFooter}}
    <footer>
        <div class="row">
            <div class="col-xs-6">
                {{#if footerPath}}
                    {{partial footerPath}}
                {{/if}}
            </div>
            {{#if showPagination}}
                <div class="col-xs-6 text-right">
                    {{sl-pagination
                        busy=loading
                        changePage="changePage"
                        currentPage=currentPage
                        totalPages=totalPages
                    }}
                </div>
            {{/if}}
        </div>
    </footer>
{{/if}}
