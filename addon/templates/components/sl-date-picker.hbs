{{#if label}}
    <label for={{inputId}}>{{label}}</label>
{{/if}}

{{input
    type="text"
    class="date-picker form-control"
    disabled=disabled
    id=inputId
    placeholder=placeholder
    value=value
}}

{{#if isOpen}}
    <div class="popover bottom show">
        <div class="arrow"></div>
        <div class="popover-content">
            {{sl-calendar
                action="selectDate"
                fixedWeekCount=true
                locale=locale
            }}
        </div>
    </div>
{{/if}}

{{#if helpText}}
    <p class="help-block">{{helpText}}</p>
{{/if}}
